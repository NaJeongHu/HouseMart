<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명"
        android:textSize="15dp"
        android:fontFamily="@font/applesdgothicneob"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방,화장실 등이 더 많이 있으면 각 항목 마지막 소개에 추가해서 적어주세요"
        android:textSize="12dp"
        android:textColor="@color/custom_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="아파트 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_apartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="위치, 주변 시설, 아파트 정원 등등" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="거실 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_livingroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="베란다 확장 여부, 방향, 바닥재질 등등" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="주방 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_kitchen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="수납공간, 빌트인 음식물처리기 여부 등등" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="1번 방 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_room1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="채광이나 방향, 벽지 상태 등등 " />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="2번 방 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_room2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="3번 방 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_room3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="1번 화장실 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_toilet1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="수압, 환풍기 상태, 습식/건식 여부 등등" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="2번 화장실 소개"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_toilet2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="내 집 간단 요약!"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:hint="20자 이내의 한 줄 소개" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="내 집 자랑하기"
            android:textSize="15dp"
            android:fontFamily="@font/applesdgothicneob" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_introduce_long"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="매물에 대한 추가 설명/자랑" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>





</LinearLayout>